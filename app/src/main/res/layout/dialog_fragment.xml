<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_padding"
        android:layout_marginTop="@dimen/dialog_iconMargin"
        android:layout_marginBottom="@dimen/dialog_iconMargin"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/dialogIcon"
            android:layout_width="@dimen/dialog_iconPadding"
            android:layout_height="@dimen/dialog_iconPadding"
            android:background="@drawable/ic_shopping_cart"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_messagePadding"
        android:textSize="@dimen/dialog_messageSize"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <Button
            android:id="@+id/dialogCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_fragment_cancel"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/dialogConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_fragment_confirm"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"/>

    </GridLayout>

</GridLayout>